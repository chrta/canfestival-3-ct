CC = SUB_CC
OPT_CFLAGS = -O2
CFLAGS = SUB_OPT_CFLAGS
PROG_CFLAGS = SUB_PROG_CFLAGS
PREFIX = SUB_PREFIX
TARGET = SUB_TARGET
CAN_DRIVER = SUB_CAN_DRIVER
TIMERS_DRIVER = SUB_TIMERS_DRIVER
ENABLE_DLL_DRIVERS=SUB_ENABLE_DLL_DRIVERS
CAN_DLL_CFLAGS=SUB_CAN_DLL_CFLAGS -L.

# define target specific environment
ifeq ($(TARGET),win32)
DLL_TYPE=dll
CAN_MINGW_DLL_FLAGS=
CAN_LINUX_DLL_FLAGS=
else
DLL_TYPE=so
CAN_MINGW_DLL_FLAGS=
CAN_LINUX_DLL_FLAGS=-Wl,-soname,libcanfestival_$(CAN_DRIVER).so
endif

INCLUDES = -I../../include -I../../include/$(TARGET) -I../../include/$(CAN_DRIVER)

OBJS = $(CAN_DRIVER).o

ifeq ($(ENABLE_DLL_DRIVERS),1)
CFLAGS += -fPIC
DRIVER = libcanfestival_$(CAN_DRIVER).$(DLL_TYPE)
else
DRIVER = $(OBJS)
endif

TARGET_SOFILES = $(PREFIX)/lib/$(DRIVER)

all: driver

vs_can_api.h:
	wget http://www.vscom.de/download/multiio/linux/driver/VSCAN_API_1_0.zip
	@if which unzip &> /dev/null; then \
	unzip VSCAN_API_1_0.zip; \
	else \
	echo "No unzip found. Please decompress VSCAN_API_1_0.zip manually"; \
	exit 1; \
	fi;

driver: vs_can_api.h $(DRIVER)

%o: %c
	$(CC) $(CFLAGS) $(PROG_CFLAGS) ${PROGDEFINES} $(INCLUDES) -o $@ -c $<

libcanfestival_$(CAN_DRIVER).$(DLL_TYPE): $(OBJS)
	$(CC) -shared $(CAN_LINUX_DLL_FLAGS) $(CAN_MINGW_DLL_FLAGS) -o $@ $< $(CAN_DLL_CFLAGS)

install: libcanfestival_$(CAN_DRIVER).so
	mkdir -p $(PREFIX)/lib/
	cp $< $(PREFIX)/lib/
		
uninstall:
	rm -f $(TARGET_SOFILES)

clean:
	rm -f $(OBJS)
	rm -f *.zip
	rm -f libvs_can_api*
	rm -f vs_can_api*

mrproper: clean
